<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="40mm"
    android:layout_height="20mm"
    android:layout_gravity="center"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="1mm"
        android:paddingRight="1mm"
        android:background="@drawable/rounded_corner_grey"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="9mm"
            android:layout_marginBottom="1mm"
            android:text=" Change Guess?"
            android:textColor="@color/white"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="12mm"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="bottom"

            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/guessPop"
                android:layout_width="15mm"
                android:layout_height="7mm"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_corner_green"
                android:gravity="center"
                android:text="Yes"
                android:textColor="@color/white"

                android:textSize="12sp"
                app:iconTint="@null"></androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancelPop"
                android:layout_width="15mm"
                android:layout_height="7mm"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_corner_red"
                android:backgroundTint="@null"
                android:gravity="center"
                android:text="No"
                android:textColor="@color/white"
                android:textSize="12sp"></androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>